<%- include('header'); -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">
        <!-- add li for every item in our 'items' array -->
        <% items.forEach((item) => { %>
        <form class="item" action="/deleteItem" method="post">   
            <input onChange="this.form.submit()" name="checkbox" value="<%=item._id%>" type="checkbox">
            <p><%= item.name %> </p>
        </form>
        <% }); %>         
        <form class="item newItem" action="/newItem" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off"/>
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

<%- include('footer'); -%>